<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize">

    <RelativeLayout
        android:id="@+id/search_closed_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/colorPrimary">

        <View
            android:id="@+id/search_button"
            android:layout_width="24db"
            android:layout_height="24db"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout__margin="16dp"
            android:background="@drawable/ic_search"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_open_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:layout_margin="4dp"
        android:background="@drawable/front_view_background">
        
        <View
            android:id="@+id/send_button"
            android:layout_width="24db"
            android:layout_height="24db"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout__margin="16dp"
            android:background="@drawable/ic_send"/>

        <EditText
            android:id="@+id/edt_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/send_button"
            android:layout_toEndOf="@id/close_button"/>

        <View
            android:id="@+id/close_button"
            android:layout_width="24db"
            android:layout_height="24db"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout__marginStart="16dp"
            android:background="@drawable/ic_close"/>

    </RelativeLayout>

</FrameLayout>